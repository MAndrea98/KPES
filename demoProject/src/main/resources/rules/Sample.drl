rule "114.1.9"
	no-loop true
	when
		d : Delo()
		o : Obelezje(subjektivanOdnos == "Umisljaj", zrtva == "<18"  )
	then
		d.setClan(114);
		d.setStav(1);
		d.setTacka(9);
		System.out.println( "Clan 114.1.9 " );
		update( d );
end

