package rules

//list any import classes here.
import com.sample.model.Obelezje;
import com.sample.model.Delo;
import com.sample.model.Tuzilac;
import com.sample.model.TipTuzioca;


//declare any global variables here


rule "Ako je ubistvo iz nehata, gleda se član 118"
	agenda-group "odredjivanjeClana"
	lock-on-active true
    when
        $o: Obelezje( subjektivanOdnos == "nehat");
        $d: Delo (clan == 118);
    then
        $o.setDelo2($d);
        update($o);

end

rule "Ako je u pitanju krađa, a žrtva je starija od 18 godina, opcija 1"
	agenda-group "odredjivanjeClana"
	lock-on-active true
    when
        $o: Obelezje( radnja == "tokom razbojnistva ili razbojnicke kradje", zrtva == ">18", delo1 == null );
        $d: Delo(clan == 114, stav == 1, tacka == 4);
    then
        $o.setDelo2($d);
        update($o);

end

rule "Ako je u pitanju krađa, a žrtva je starija od 18 godina, opcija 2"
	agenda-group "odredjivanjeClana"
	lock-on-active true
    when
        $o: Obelezje( radnja == "tokom razbojnistva ili razbojnicke kradje" && zrtva == ">18", delo1 == null);
        $d: Delo(clan == 114, stav == 1, tacka == 9);
    then
        $o.setDelo2($d);
        update($o);
end

rule "Ako je maksimalna kazna manja od 10 godina zatvora"
	agenda-group "odredjivanjeTuzioca"
	lock-on-active true
	when
		Obelezje( $delo : delo1 )
		Delo (this == $delo, minKazna < 10)
	then
		System.out.println("Osnovi javni");
		insert (new Tuzilac(TipTuzioca.OSNOVNI_JAVNI_TUZILAC));
end

